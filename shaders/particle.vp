#version 130

#pragma include shaders/noise3D.glsl

in float inType;
in vec3 inPosition;
in float inLife;
in vec3 inVelocity;
in float inSize;
in float inMaxLife;

// Geometry shader outputs
out float gType;
out vec3 gPosition;
out float gLife;
out vec3 gVelocity;
out float gSize;
out float gMaxLife;

void main(){
	// Just pass everything to the geometry shader
	gType = inType;
	gPosition = inPosition;
	gLife = inLife;
	gVelocity = inVelocity;
	gSize = inSize;
	gMaxLife = inMaxLife;
}